{
  "name": "json-ipc-lib",
  "version": "1.1.3",
  "description": "Enables creation and consumption of Unix domain socket based IPC channels between Node.js apps using JSON-RPC 2.0 as a protocol.",
  "main": "./dist",
  "scripts": {
    "example:client": "DEBUG=json-ipc node examples/client-transpiled.js",
    "example:server": "DEBUG=json-ipc node examples/server-transpiled.js",
    "lint": "gulp lint",
    "posttest": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "gulp build",
    "prepublish": "check-node-version --npm \">=4\" || npm run prepare",
    "pretest": "gulp clean && gulp lint",
    "test": "nyc mocha ./test/src",
    "test:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test:unit": "nyc mocha ./test/src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PlayNetwork/json-ipc-lib.git"
  },
  "keywords": [
    "domain",
    "inter-process communication",
    "ipc",
    "json-rpc",
    "socket",
    "unix"
  ],
  "author": "Joshua Thomas (https://github.com/brozeph)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PlayNetwork/json-ipc-lib/issues"
  },
  "homepage": "https://github.com/PlayNetwork/json-ipc-lib#readme",
  "dependencies": {
    "@babel/runtime-corejs2": "^7.3.1",
    "debug": "^4.1.1",
    "json-rpc-protocol": "^0.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-eslint": "^5.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "mocha": "^5.2.0",
    "nyc": "^13.2.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ],
    "instrument": false,
    "report-dir": "./reports",
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  }
}
